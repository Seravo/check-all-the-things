[hlint]
apt = hlint
command = hlint .

[cabal]
apt = cabal-install
match = *.cabal
command = cabal check

[ghc-mod-lint]
apt = ghc-mod
match = *.hs
not-match = HLint.hs Setup.hs
command = ghc-mod lint {file}

