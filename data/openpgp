[hokey-lint]
apt = hopenpgp-tools
match = *.pgp *.gpg
command = cat {files} | hokey lint

[hokey-lint-asc]
apt = hopenpgp-tools
match = *.asc
command = cat {files} | hot dearmor | hokey lint

[pgp-private-key]
command = grep --recursive --perl-regexp --null-data --files-with-matches '(?s)-----BEGIN PGP PRIVATE KEY BLOCK-----.*-----END PGP PRIVATE KEY BLOCK-----' .
