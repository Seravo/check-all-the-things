[pyflakes]
apt = pyflakes
command = pyflakes .

[pyflakes3]
apt = pyflakes
command = pyflakes3 .

[pep8]
apt = pep8
command = pep8 --ignore W191 .

[site-packages]
command = grep -rw site-packages .

[pythonpath]
command = grep -rw PYTHONPATH .

[environ-home]
match = *.py
command = grep 'environ *\[.HOME.\]' {files}

[yaml-load]
match = *.py
command = grep -F 'yaml.load' {files}

