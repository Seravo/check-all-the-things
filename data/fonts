[fontlint]
apt = fontforge-nox
match = *.ttf *.otf *.sfd *.pfa *.pfb *.bdf *.pk *.ttc *.pcf
command = fontlint {file}

[ftvalid]
apt = freetype2-demos
match = *.ttf *.otf
command = ftvalid {file}

[ftlint]
apt = freetype2-demos
match = *.ttf *.otf
command = ftlint 16 {files} | grep -v '^: OK\.'

