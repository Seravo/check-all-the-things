[msgfmt-check]
apt = gettext
files = *.po *.pot
types = text/x-po
command = msgfmt --check --check-compatibility --check-accelerators --output-file=/dev/null {file}

[gettext-lint-checker]
flags = fixme fixme-silent
apt = gettext-lint
files = *.po *.pot
types = text/x-po
command = POFileChecker {files}

[gettext-lint-spell]
flags = spelling fixme fixme-silent
apt = gettext-lint, aspell
files = *.po *.pot
types = text/x-po
command = POFileSpell {files}

[i18nspector]
apt = i18nspector
files = *.po *.pot *.mo *.gmo
types = text/x-po
command = i18nspector --jobs {njobs} {files}

[acheck]
flags = todo
apt = acheck
comment = acheck ...

# vim:ft=dosini
