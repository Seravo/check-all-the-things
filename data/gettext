[msgfmt-check]
apt = gettext
files = *.po *.pot
command = msgfmt --check --check-compatibility --check-accelerators --output-file=/dev/null {file}

[gettext-lint-checker]
apt = gettext-lint
files = *.po *.pot
command = POFileChecker {files}

[gettext-lint-spell]
apt = gettext-lint
files = *.po *.pot
command = POFileSpell {files}

[i18nspector]
apt = i18nspector
files = *.po *.pot *.mo *.gmo
command = i18nspector {files}

[acheck]
flags = todo
apt = acheck
comment = acheck ...

# vim:ft=dosini
