[chk-origtargz]
flags = todo network
apt = devscripts, libwww-perl
files = ./debian/watch
comment =
 not yet implemented but checkorig would be like this:
 tmp=$(mktemp -d)
 env PERL5OPT=-m-lib=. uscan --download-current-version --destdir $tmp
 diffoscope/tardiff/cmp ../*.orig.* $tmp/*
 rm -rf $tmp

