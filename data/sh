[sh-syntax-check]
match = *.sh
command = sh -n {file}

[checkbashisms]
apt = devscripts
match = *.sh
command = checkbashisms {files}

[shellcheck]
apt = shellcheck
match = *.sh *.bash *.zsh
command = shellcheck {files}

[bashate]
apt = python3-bashate | python-bashate
match = *.sh *.bash
command = bashate --ignore E002,E003 {files}

