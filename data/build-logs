[blhc]
apt = blhc
files = ../*.build
command = blhc --all {files}

[build-log-warnings]
files = ../*.build
command = grep -H -i warn {files}

[build-log-w]
files = ../*.build
command = grep -H -w W {files}

[build-log-errors]
files = ../*.build
command = grep -H -i error {files}

[build-log-e]
files = ../*.build
command = grep -H -w E {files}

[bls-standalone]
flags = todo
apt = bls-standalone
files = ../*.build
comment =
 Waiting for bls-standalone to be accepted from NEW:
 https://ftp-master.debian.org/new/bls-standalone_0.20151231.html
command = bls-standalone --blhc=NO {files}

