[blhc]
apt = blhc
files = ../*.build
command = blhc --all {files}

[build-log-warnings]
files = ../*.build
command = grep -H -i warn {files} ; grep -H -w W {files}

[build-log-errors]
files = ../*.build
command = grep -H -i error {files} ; grep -H -w E {files}

[build-log-scanner]
flags = todo
comment = Waiting on bls to be split and packaged: http://qa.debian.org/bls/

