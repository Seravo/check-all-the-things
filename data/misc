[licensecheck]
command = licensecheck --check=. --recursive --copyright .
# TODO: is --check=. reasonable?

[suspicious-source]
command = suspicious-source

[codespell]
command = codespell --disable-colors --quiet-level=3
# TODO: remove --disable-colors once <http://bugs.debian.org/742207> is fixed

[fdupes]
command = fdupes -q -r .

[bitmap-multilayer]
match = *.png *.gif *.jpg *.jpeg
command = grep -iF gimp {files}

[bitmap-vector]
match = *.png *.gif *.jpg *.jpeg
command = grep -iF inkscape {files}

