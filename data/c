[cppcheck]
apt = cppcheck
command = cppcheck -j{njobs} --quiet -f . | grep -vF 'cppcheck: error: could not find or open any of the paths given.'

[include-what-you-use]
apt = iwyu
match =
 *.c *.cc *.cxx *.cpp
 *.h *.hh *.hxx *.hpp
command = include-what-you-use {file}

