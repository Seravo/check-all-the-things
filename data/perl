[perl-syntax-check]
match = *.pl *.pm
command = perl -wc {file}

[perl-b-lint]
match = *.pl *.pm
prereq = perl -MO=Lint /dev/null
command = perl -MO=Lint {file}

[perlcritic]
command = perlcritic -1 .

[perllib]
command = grep -rw PERLLIB .

