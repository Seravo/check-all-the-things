# Dangerous because it executes code in use statements
# and BEGIN, UNITCHECK and CHECK blocks
[perl-syntax-check]
match = *.pl *.pm
command = perl -wc {file}
flags = dangerous
# TODO: grep -v ' syntax OK$'

# Dangerous because it executes code in use statements
# and BEGIN, UNITCHECK and CHECK blocks
[perl-b-lint]
match = *.pl *.pm
prereq = perl -MO=Lint /dev/null
command = perl -MO=Lint {file}
flags = dangerous
# TODO: grep -v ' syntax OK$'

[perlcritic]
command = perlcritic -1 .

[perllib]
command = grep -rw PERLLIB .

